#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Hello! Ready to play Tic Tac Toe?"
puts "What type of game would you like to play? 
Enter 0: Computer v Computer; 
Enter 1: You v Computer; 
Enter 2 You v another player"

answer = gets.strip

game = Game.new

puts "Okay! Starting a game of Tic Tac Toe!"

until game.over?
    game.play
end

puts "How about one more game?"

play_another = ""

until play_another.downcase == "n" || play_another.downcase == "no"
    puts "Enter yes or no:"
    play_another = gets.strip
    if play_another == "y" || play_another == "yes"
        game = Game.new
        until game.over?
            game.play
        end
    end
end